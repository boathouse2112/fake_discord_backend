generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id           String  @id @default(uuid())
    username     String  @unique
    avatarURL    String?
    aboutMe      String
    profileColor String
    chats        Chat[]
}

model Chat {
    id       String    @id @default(uuid())
    users    User[]
    messages Message[]
}

model Message {
    id     String @id @default(uuid())
    chat   Chat   @relation(fields: [chatId], references: [id])
    chatId String
}
